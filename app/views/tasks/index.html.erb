<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <div class="group" style="display: flex; align-items: center;">
    <% if task.completed == false %>
      <i class="far fa-square"></i>
    <% else %>
      <i class="far fa-check-square"></i>
    <% end %>
    <%= link_to task_path(task) do %>
      <p><%= task.title %></p>
    <% end %>
    <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete #{task.title}"} %>
    <!-- data: {confirm: "Are you sure you want to delete #{task.title}"}
    shortcut to handle alters and confirm in the HTML! -->
  </div>
<% end %>

<%= link_to "Add a new task", new_task_path %>

